<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switchAutoConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_auto_connect"
            android:paddingTop="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="@string/settings_device_label" />

        <EditText
            android:id="@+id/etDeviceLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/settings_device_label_hint" />

        <Switch
            android:id="@+id/switchNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_notifications"
            android:paddingTop="12dp" />

        <Switch
            android:id="@+id/switchDemoMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_demo_mode"
            android:paddingTop="12dp" />

        <Button
            android:id="@+id/btnSaveSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/settings_save" />

    </LinearLayout>
</ScrollView>
